using System;
namespace App
{
    class Cl1
    {
        static void Main(string[] args)
        {
            Random randomNumber = new Random();
            int roll = randomNumber.Next(1, 101);
            Console.WriteLine("Zgadnij jaką liczbe wylosowal komputer z przedzialu od 1 do 100: ");
            int guess;
            int ileRazy = 0;
            do
            { guess = int.Parse(Console.ReadLine());
                if (guess <= 0 || guess > 100)
                {
                    Console.WriteLine("Liczba spoza zakresu!");
                }
                else
                {
                    if (guess > roll)
                    {
                        ileRazy++;
                        Console.WriteLine("Za duzo");
                    }
                    else if (guess < roll)
                    {
                        ileRazy++;
                        Console.WriteLine("Za malo");
                    }
                    else
                    {
                        ileRazy++;
                        Console.WriteLine("Gratuluje! Liczba wylosowana przez komputer to " + roll + ".\nZa {0} razem.", ileRazy);
                    }
                }
            }while(guess != roll); // Pętla sie wykonuje dopóki warunek nie zostaine spełniony, w tym wypadku dopóki próba zgadnięcia będzie różna od wylosowanej liczb
        }                          //Gdy próba zgadnięcia będzie taka sama jak wylosowana liczba, pętla nie wykona się następnyt raz
    } 
}
